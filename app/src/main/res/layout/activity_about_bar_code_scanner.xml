<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context="ir.rastanco.rastanbarcodescanner.presenter.navigationDrawerManagment.AboutBarCodeScanner"
    android:layout_height="match_parent">
    <include
        layout="@layout/toolbar_about_barcode_scanner"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="51dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/text_to_discribe_app"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="12dp"
                android:textColor="@color/actionbar"
                android:id="@+id/about_app_text"/>
        </FrameLayout>
    </ScrollView>
</RelativeLayout>
