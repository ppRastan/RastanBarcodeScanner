<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout android:background="@color/gray_background"
    android:id="@+id/lyt_container"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="2"
    android:background="@android:color/white">

    <CheckBox
        android:background="@android:color/white"
        android:id="@+id/listview_checkbox"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:paddingRight="@dimen/list_item_padding_sides"
        android:paddingLeft="@dimen/list_item_padding_sides"
        android:gravity="center_vertical"
        android:height="@dimen/list_item_height"
        android:layout_weight="1"
        android:visibility="invisible" />

    <TextView android:background="@android:color/white"
        android:id="@+id/txt_data"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:paddingRight="@dimen/list_item_padding_sides"
        android:paddingLeft="@dimen/list_item_padding_sides"
        android:gravity="center_vertical"
        android:height="@dimen/list_item_height"
        android:layout_weight="1"
        android:textAlignment="viewEnd" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/img_icon"
        android:layout_weight="1"
        android:layout_marginLeft="5dp" />

</LinearLayout>

    <LinearLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:paddingRight="@dimen/list_item_padding_sides"
        android:paddingLeft="@dimen/list_item_padding_sides"
        android:height="@dimen/list_item_height"
        android:weightSum="6"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView android:id="@+id/txt_delete"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:hapticFeedbackEnabled="true"
            android:layout_weight="2"
            android:clickable="false"
            android:text="@string/deleted"/>

        <TextView android:id="@+id/txt_share"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:textColor="@color/primary"
            android:hapticFeedbackEnabled="true"
            android:layout_weight="2"
            android:clickable="false"
            android:text="@string/share_current_file"/>

        <TextView android:id="@+id/txt_undo"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:gravity="center"
            android:textColor="@color/yellow"
            android:layout_weight="2"
            android:clickable="false"
            android:text="@string/undo"/>

    </LinearLayout>

</FrameLayout>